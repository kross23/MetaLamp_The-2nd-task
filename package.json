{
  "name": "html-tasck",
  "version": "1.0.0",
  "description": "MetaLamp Frontend 2 step education",
  "main": "index.js",
  "scripts": {
    "cleanup": "rm -rf .cache dist",
    "dev": "parcel ./src/index.pug -p 4200 --open",
    "devl": "npm run cleanup && parcel ./src/index.pug -p 4200 --open",
    "build": "parcel  build --no-minify ./src/index.pug",
    "postbuild": "ncp ./public ./dist --filter '**/*.*'",
    "gh": "npm run build -- --public-url='https://github.com/kross23/MetaLamp_The-2nd-task'"
  },
  "author": "kross",
  "license": "ISC",
  "dependencies": {
    "node-sass": "^6.0.1",
    "normalize-scss": "^7.0.1",
    "normalize.css": "^8.0.1",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "cssnano": "^5.0.8",
    "ncp": "2.0.0",
    "postcss": "^8.3.6"
  }
}
